generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  cliente
}

enum Status {
  pendente
  preparando
  pronto
  entregue
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     Role      @default(cliente)
  pedidos  Produto[]
}

model Produto {
  id        Int      @id @default(autoincrement())
  nome      String
  quantity  Int
  status    Status   @default(pendente)
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  valor     Decimal  @db.Decimal(10, 2)
  imagem    String?
}
